<% unless cart.line_items.empty? %>
<h3>Your Cart</h3>
<style> 
#customers { font-family: Arial, Helvetica, sans-serif; border-collapse: collapse; width: 80%; } #customers td, #customers th { border: 1px solid #ddd; padding: 8px; } #customers tr:nth-child(even){background-color: #f2f2f2;} #customers tr:hover {background-color: #ddd;} #customers th { padding-top: 12px; padding-bottom: 12px; text-align: left; background-color: #583c66; color: white; } 
</style>
<table id="customers">
	<tr> <th>Quanitity</th> <th>Plant Name</th> <th>Amount</th> </tr>
	<%= render(cart.line_items) %>
	<tr>
		<td colspan="2">Total</td>
		<td class="total_cell"><%= number_to_currency(cart.total_price)  %></td>
	</tr>
</table>
<% session[:amount]=cart.total_price %>
<%= button_to 'Empty Cart', cart, :method => :delete, :confirm => 'Are you sure?' %>
<p>
	<%= link_to "Continue Shopping",:controller=>"gallery",:action=>"index" %> | 
	<% if user_signed_in? %>
        <%= link_to "Checkout" ,root_path %>
	<% else %>
	    <%= link_to "Log in to Checkout",new_user_session_path %>
	<% end %>
</p>
<% end %>