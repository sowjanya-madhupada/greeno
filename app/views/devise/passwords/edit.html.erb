
<h2 class="centered-text">Change your password</h2>
<div class="form-padding">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "New password" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, class: "col-4", autofocus: true, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirm new password" %><br />
      <%= f.password_field :password_confirmation, class: "col-4", autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Change my password", class: "btn btn-lg btn-secondary" %>
    </div>
  <% end %>
</div>
<%= render "devise/shared/links" %>

