
 <h2 class="centered-text">Edit <%= resource_name.to_s.humanize %></h2>
  <div class="form-padding">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name %>
        <%= f.search_field :name, class:"col-4", autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, class:"col-4", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :phone_number %>
        <%= f.telephone_field :phone_number, class:"col-4", autofocus: true, autocomplete: "phone_number" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, class:"col-4", autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class:"col-4", autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, class:"col-4",autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class:"btn btn-lg btn-secondary" %>
      </div>
    <% end %>
  </div>
  

