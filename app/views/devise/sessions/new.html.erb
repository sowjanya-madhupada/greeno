  <h2 class="centered-text">LOG IN</h2>
  <div class="form-padding" >
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-co col-4", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-co col-4", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div >
          <%= f.check_box :remember_me %> Remember me
        </div></br>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-lg btn-secondary" %>
      </div>
    <% end %>
  </div>
  
  <%= render "devise/shared/links" %>
  

