<div class="form-control">
  <%= form_with(model: store, local: true) do |form| %>
    <% if store.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>

        <ul>
          <% store.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :price %>
      <%= form.text_field :price %>
    </div>

    <div class="field">
      <%= form.label :season %>
      <%= form.text_field :season %>
    </div>

    <div class="field">
      <%= form.label :plants_type %>
      <%= form.text_field :plants_type %>
    </div>

    <div class="field">
      <%= form.label :product_image %>
      <%= form.file_field :product_image %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
